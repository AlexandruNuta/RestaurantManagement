<Window x:Class="ManagementApp.Views.AdminPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagementApp.ViewModels"
        mc:Ignorable="d"
        Title="AdminPage" Height="450" Width="700">
    
    <Window.DataContext>
        <local:AdminViewModel/>
    </Window.DataContext>

    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Content="Employees" Command="{Binding NavigateToEmployeesCommand}" Width="100" Margin="10"/>
            <Button Content="Products" Command="{Binding NavigateToProductsCommand}" Width="100" Margin="10"/>
            <Button Content="Tables" Command="{Binding NavigateToTablesCommand}" Width="100" Margin="10"/>
            <Button Content="Order Ticket" Command="{Binding NavigateToOrderCommand}" Width="150" Margin="10"/>
        </StackPanel>
    </Grid>
    
</Window>
